<%= builder.fields_for(:payment, html: {class: "form-horizontal"}) do |payment_builder| %>
  <div class="col-md-6">
    <div class="well">
      <fieldset>
        <legend><%= t(".payment_data") %></legend>
      </fieldset>

      <div class="field form-group">
        <div class="col-md-5">
          <%= payment_builder.label :type, class: "control-label" %>
          <%= payment_builder.text_field :type, class: "form-control" %>
        </div>
        <div class="col-md-5">
          <%= payment_builder.label :value, class: "control-label" %>
          <%= payment_builder.text_field :value, class: "form-control" %>
        </div>

        <div class="col-md-2">
          <%= payment_builder.label :fulfilled, class: "control-label" %>
          <%= payment_builder.check_box :fulfilled, class: "form-control" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="col-md-12">
          <%= payment_builder.label :date, class: "control-label" %>
          <div class="input-group date datetimepicker" id="datetimepicker_end">
            <%= payment_builder.text_field :date, class: "form-control", id: "datetimepicker1" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
          </div>
        </div>
      </div>

      <div class="field form-group">
        <div class="col-md-12">
          <%= payment_builder.label :observation, class: "control-label" %>
          <%= payment_builder.text_area :observation, class: "form-control", rows: 5 %>
        </div>
      </div>
    </div>
  </div>
<% end %>
