<%= f.fields_for(:buyer, html: {class: "form-horizontal"}) do |builder| %>
  <div class="col-md-6">
    <div class="well">
      <fieldset>
        <legend><%= t(".buyer_data") %></legend>
      </fieldset>

      <div class="field form-group">
        <div class="col-md-6">
          <%= builder.label @buyer.document_name, class: "control-label" %>
          <%= builder.text_field @buyer.document_name, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= builder.label :name, class: "control-label" %>
          <%= builder.text_field :name, class: "form-control" %>
        </div>

         <%= f.hidden_field :buyer_type %>
      </div>
    </div>
  </div>
<% end -%>
