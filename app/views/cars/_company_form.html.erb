<%= f.fields_for(:buyer, html: {class: "form-horizontal"}) do |builder| %>
  <div class="col-md-6">
    <div class="well">
      <fieldset>
        <legend><%= t(".buyer_data") %></legend>
      </fieldset>

      <div class="field form-group">
        <div class="col-md-6">
          <%= builder.label :cnpj, class: "control-label" %>
          <%= builder.text_field :cnpj, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= builder.label :name, class: "control-label" %>
          <%= builder.text_field :name, class: "form-control" %>
        </div>

        <div class="col-md-12">
          <%= builder.label :legal_name, class: "control-label" %>
          <%= builder.text_field :legal_name, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= builder.label :email, class: "control-label" %>
          <%= builder.text_field :email, class: "form-control" %>
        </div>

        <div class="col-md-6">
          <%= builder.label :phone, class: "control-label" %>
          <%= builder.text_field :phone, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
<% end -%>
