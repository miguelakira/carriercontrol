<%= f.fields_for(:client, html: {class: "form-horizontal"}) do |builder| %>
  <div class="col-md-6">
    <div class="well">
      <fieldset>
        <legend><%= t(".client_data") %></legend>
      </fieldset>

      <div class="field form-group">
        <div class="col-md-6">
          <%= builder.label :cpf, class: "control-label" %>
          <%= builder.text_field :cpf, class: "form-control", "ng-model": "client.cpf", "ui-mask": "999.999.999-99" %>
        </div>
        <div class="col-md-6">
          <%= builder.label :rg, class: "control-label" %>
          <%= builder.text_field :rg, class: "form-control", "ng-model": "client.rg" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="col-md-12">
          <%= builder.label :name, class: "control-label" %>
          <%= builder.text_field :name, class: "form-control capitalize", "ng-model": "client.name" %>
        </div>
      </div>

      <div class="field form-group">
        <div class="col-md-6">
          <%= builder.label :email, class: "control-label" %>
          <%= builder.text_field :email, class: "form-control", "ng-model": "client.email" %>
        </div>
        <div class="col-md-6">
          <%= builder.label :phone, class: "control-label" %>
          <%= builder.text_field :phone, class: "form-control", "ng-model": "client.phone" %>
        </div>
      </div>
      <div class="field form-group">
        <div class="col-md-12">
          <%= builder.label :observation, class: "control-label" %>
          <%= builder.text_area :observation, class: "form-control", rows: 5, "ng-model": "client.observation" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
