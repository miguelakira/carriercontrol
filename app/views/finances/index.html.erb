<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= t "activerecord.controllers.finances" %></h1>
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th><%= I18n.t "activerecord.attributes.person.name" %></th>
            <th><%= I18n.t "activerecord.attributes.person.cpf" %></th>
            <th><%= I18n.t "activerecord.attributes.person.total_debt" %></th>
            <th><%= I18n.t "activerecord.attributes.person.total_payment" %></th>
            <th><%= I18n.t "activerecord.attributes.person.active_cars" %></th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr class="accordion-toggle">
              <td><%= person.name %></td>
              <td><%= person.cpf %></td>
              <td><%= number_to_currency person.total_debt %></td>
              <td><%= number_to_currency person.total_payment %></td>
              <td><%= person.active_cars %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
