<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1><%= t "activerecord.controllers.finances" %></h1>
      <table class="table table-striped table-hover table-condensed table-clickable">
        <thead>
          <tr>
            <th><%= I18n.t "activerecord.attributes.person.name" %></th>
            <th><%= I18n.t "activerecord.attributes.person.cpf" %></th>
            <th><%= I18n.t "activerecord.attributes.person.total_debt" %></th>
            <th><%= I18n.t "activerecord.attributes.person.total_payments" %></th>
            <th><%= I18n.t "activerecord.attributes.person.active_cars" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>
            <tr>
              <td><%= person.name %></td>
              <td><%= person.cpf %></td>
              <td><%= number_to_currency person.total_debt %></td>
              <td><%= number_to_currency person.total_payments %></td>
              <td><%= person.cars.active.count %></td>
              <td>
                <%= link_to edit_finance_path(person.finance), class: "btn btn-default btn-sm", "aria-abel": "Right Align" do %>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  <span class="sr-only">Edit</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-lg-12">
      <h1><%= t "activerecord.controllers.finances" %></h1>
      <table class="table table-striped table-hover table-condensed">
        <thead>
          <tr>
            <th><%= I18n.t "activerecord.attributes.company.name" %></th>
            <th><%= I18n.t "activerecord.attributes.company.cnpj" %></th>
            <th><%= I18n.t "activerecord.attributes.company.total_debt" %></th>
            <th><%= I18n.t "activerecord.attributes.company.total_payments" %></th>
            <th><%= I18n.t "activerecord.attributes.company.active_cars" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <tr class="accordion-toggle">
              <td><%= company.name %></td>
              <td><%= company.cnpj %></td>
              <td><%= number_to_currency company.total_debt %></td>
              <td><%= number_to_currency company.total_payments %></td>
              <td><%= company.cars.active.count %></td>
              <td>
                <%= link_to edit_finance_path(company.finance), class: "btn btn-default btn-sm", "aria-abel": "Right Align" do %>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  <span class="sr-only">Edit</span>
                <% end %>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
